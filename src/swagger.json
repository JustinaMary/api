        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "AssetPool",
            "in": "header",
            "required": true,
            "type": "string"
          },
          {
            "name": "address",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/members/:address": {
      "get": {
        "tags": [
          "Members"
        ],
        "description": "Get information about a member in the asset pool",
