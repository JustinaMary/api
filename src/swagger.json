        "parameters": [
          {
            "name": "title",
            "in": "body",
            "required": true,
            "type": "string"
          },
          {
            "name": "token",
            "description": "Address of the ERC20 token used for this pool.",
            "in": "body",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success code.",
            "schema": {
              "type": "object",
              "properties": {
                "address": {
                  "type": "string"
                }
              }
            }
          }
        }
