{
    "name": "thx-api",
    "version": "0.3.2",
    "description": "Public API for THX project",
    "repository": {
        "type": "git",
        "url": "https://github.com/thxprotocol/api"
    },
    "author": "Peter Polman",
    "license": "AGPL-3.0",
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "bracketSpacing": true,
        "printWidth": 120,
        "trailingComma": "all",
        "quoteProps": "consistent"
    },
    "nodemonConfig": {
        "ignore": [
            "test/load/*",
            "logs/*",
            "scripts/*"
        ]
    },
    "scripts": {
        "serve": "node ./dist/src/server.js",
        "serve:debug": "nodemon --inspect dist/src/server.js",
        "debug": "npm run build && npm run watch:debug",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "build": "tsc",
        "build:docs": "swagger-jsdoc -d ./src/swaggerDef.js -o ./src/swagger.json",
        "build:contracts": "npx hardhat compile",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run watch:node\"",
        "watch:ts": "tsc -w",
        "watch:node": "nodemon dist/src/server.js",
        "watch:test": "npx test -- --watchAll",
        "watch:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run serve:debug\"",
        "test": "NODE_ENV=test npx hardhat node > /dev/null & sleep 1; NODE_ENV=test npx jest --force-exit --verbose; kill $(lsof -t -i :8545);",
        "test:load": "docker-compose run k6 run ./test/load/signup.js",
        "deploy:factory": "npx hardhat run scripts/deployAssetPoolFactory.js --network default",
        "deploy:token": "npx hardhat run scripts/deployExampleToken.js --network default"
    },
    "dependencies": {
        "@maticnetwork/maticjs": "^2.0.7",
        "async": "^3.1.0",
        "axios": "^0.21.1",
        "bcrypt-nodejs": "^0.0.3",
        "bluebird": "^3.5.5",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "connect-mongo": "^3.0.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "ethers": "^5.0.25",
        "express": "^4.17.1",
        "express-flash": "0.0.2",
        "express-session": "^1.16.2",
        "express-validator": "^6.2.0",
        "lodash": "^4.17.15",
        "lusca": "^1.6.1",
        "mongoose": "^5.7.5",
        "morgan": "^1.10.0",
        "nodemailer": "^6.3.0",
        "passport": "^0.4.0",
        "passport-local": "^1.0.0",
        "pug": "^2.0.4",
        "qrcode": "^1.4.4",
        "solc": "^0.7.1",
        "web3": "^1.2.7",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.1",
        "@openzeppelin/contracts": "^3.3.0",
        "@types/async": "^3.0.2",
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/bluebird": "^3.5.27",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.3",
        "@types/compression": "^1.0.1",
        "@types/concurrently": "^4.1.0",
        "@types/connect-mongo": "^3.0.0",
        "@types/errorhandler": "^0.0.32",
        "@types/eslint": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/express-flash": "0.0.1",
        "@types/express-session": "^1.15.14",
        "@types/google-protobuf": "^3.7.2",
        "@types/jest": "^24.0.23",
        "@types/jquery": "^3.3.37",
        "@types/lodash": "^4.14.141",
        "@types/lusca": "^1.6.1",
        "@types/mongoose": "^5.5.18",
        "@types/node": "^12.7.8",
        "@types/node-sass": "^4.11.0",
        "@types/nodemailer": "^6.2.1",
        "@types/passport": "^1.0.1",
        "@types/passport-facebook": "^2.1.9",
        "@types/passport-local": "^1.0.33",
        "@types/pug": "^2.0.4",
        "@types/request": "^2.48.3",
        "@types/request-promise": "^4.1.44",
        "@types/retry": "^0.12.0",
        "@types/shelljs": "^0.8.5",
        "@types/supertest": "^2.0.8",
        "@types/web3": "^1.2.2",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.3.1",
