{
    "name": "thx-api",
    "version": "0.3.2",
    "description": "Public API for THX project",
    "repository": {
        "type": "git",
        "url": "https://github.com/thxprotocol/api"
    },
    "author": "Peter Polman",
    "license": "AGPL-3.0",
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "bracketSpacing": true,
        "printWidth": 120,
        "trailingComma": "all",
        "quoteProps": "consistent"
    },
    "nodemonConfig": {
        "ignore": [
            "test/load/*",
            "logs/*",
            "scripts/*"
        ]
    },
    "scripts": {
        "serve": "node ./dist/src/server.js",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "build": "npm run build-ts",
        "build-ts": "tsc",
        "build-docs": "swagger-jsdoc -d ./src/swaggerDef.js -o ./src/swagger.json",
        "publish": "npx test; npm version patch; npx build-docs;",
        "generate-keys": "node ./scripts/generateKeys.js",
        "watch-ts": "tsc -w",
        "watch-node": "nodemon dist/src/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "NODE_ENV=test npx hardhat --network hardhat run ./scripts/deployAssetPoolFactory.js && jest --force-exit --verbose ./test/e2e/*.test.ts",
        "test:load": "docker-compose run k6 run ./test/load/signup.js",
        "watch-test": "npm run test -- --watchAll",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/src/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "dependencies": {
        "@maticnetwork/maticjs": "^2.0.7",
        "@truffle/hdwallet-provider": "^1.1.0",
        "async": "^3.1.0",
        "axios": "^0.21.1",
        "bcrypt-nodejs": "^0.0.3",
        "bluebird": "^3.5.5",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "connect-mongo": "^3.0.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "ejs": "^3.1.5",
        "ethers": "^5.0.25",
        "express": "^4.17.1",
        "express-jwt": "^6.0.0",
        "express-jwt-authz": "^2.4.1",
        "express-validator": "^6.2.0",
        "jose": "^2.0.3",
        "jwks-rsa": "^1.12.0",
        "lodash": "^4.17.15",
        "lusca": "^1.6.1",
        "mongoose": "^5.7.5",
        "morgan": "^1.10.0",
        "nodemailer": "^6.3.0",
        "oidc-provider": "^6.29.9",
        "qrcode": "^1.4.4",
        "web3": "^1.2.7",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.1",
        "@nomiclabs/hardhat-ganache": "^2.0.0",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@nomiclabs/hardhat-web3": "^2.0.0",
        "@openzeppelin/contracts": "^3.3.0",
        "@types/async": "^3.0.2",
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/bluebird": "^3.5.27",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.3",
        "@types/compression": "^1.0.1",
        "@types/concurrently": "^4.1.0",
        "@types/connect-mongo": "^3.0.0",
        "@types/eslint": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/jest": "^24.0.23",
        "@types/lodash": "^4.14.141",
        "@types/lusca": "^1.6.1",
        "@types/mongoose": "^5.5.18",
        "@types/node": "^12.7.8",
        "@types/nodemailer": "^6.2.1",
        "@types/request": "^2.48.3",
        "@types/request-promise": "^4.1.44",
        "@types/supertest": "^2.0.8",
        "@types/web3": "^1.2.2",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.3.1",
        "@typescript-eslint/parser": "^2.3.1",
        "chai": "^4.2.0",
        "concurrently": "^5.2.0",
        "diamond-2": "^1.4.0",
        "eslint": "^6.4.0",
        "hardhat": "^2.0.7",
        "jest": "^24.9.0",
        "mongodb-memory-server": "^6.9.0",
        "nodemon": "^1.19.2",
        "supertest": "^4.0.2",
        "swagger-jsdoc": "^4.2.0",
        "swagger-ui-express": "^4.1.4",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.4.1",
        "typescript": "^3.6.3"
    }
}
